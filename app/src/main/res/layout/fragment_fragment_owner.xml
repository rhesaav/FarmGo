<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.afinal.xirpl1052029.farmgo.FragmentOwner">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tabOwner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/nama_owner"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/no_telp_owner"
            android:layout_below="@+id/kodemember"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/kodemember"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nama_owner"
            android:layout_below="@+id/judul"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:hint="Kode Member"
            android:inputType="textPersonName"
            android:maxLength="5"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/no_telp_owner"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pass_owner"
            android:layout_below="@+id/nama_owner"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:hint="No.Telp"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/user_owner"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pass_owner"
            android:layout_alignBottom="@+id/pass_owner"
            android:layout_alignEnd="@+id/no_telp_owner"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/pass_owner"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/namaperusahaan"
            android:layout_below="@+id/no_telp_owner"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:hint="Passoword"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/namaperusahaan"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/proses_owner"
            android:layout_below="@+id/pass_owner"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:hint="Nama Perusahaan"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/alamat_perusahaan"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/namaperusahaan"
            android:layout_alignBottom="@+id/namaperusahaan"
            android:layout_alignEnd="@+id/proses_owner"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:hint="Alamat"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <Button
            android:id="@+id/proses_owner"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaperusahaan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_transparent"
            android:text="Daftar"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/lemonmilkbold"
            android:text="Lets be a Farmer"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/signInButtonOwner"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/proses_owner"
            android:layout_below="@+id/proses_owner"
            android:layout_marginTop="21dp">

        </com.google.android.gms.common.SignInButton>


    </RelativeLayout>

</FrameLayout>
