<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_farmgo">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/daftar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/lemonmilklight"
        android:text="Rasakan beternak dengan rasa nyaman, aman, dan mudah"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="89dp"
        android:layout_toStartOf="@+id/logo"
        android:text="MASUK" />

    <Button
        android:id="@+id/button_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_masuk"
        android:layout_alignBottom="@+id/button_masuk"
        android:layout_toEndOf="@+id/logo"
        android:text="Daftar" />


</RelativeLayout>