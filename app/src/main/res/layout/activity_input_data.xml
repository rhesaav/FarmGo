<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="id.sch.smktelkom_mlg.afinal.xirpl1052029.farmgo.InputData">

    <EditText
        android:id="@+id/umur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="umur ayam"
        android:inputType="number" />

    <EditText
        android:id="@+id/jayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/umur"
        android:layout_marginTop="22dp"
        android:hint="jumlah ayam"
        android:inputType="number" />

    <EditText
        android:id="@+id/jmati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jtelur"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:hint="jumlah mati"
        android:inputType="number" />

    <EditText
        android:id="@+id/jtelur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btelur"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:hint="jumlah telur"
        android:inputType="number" />

    <EditText
        android:id="@+id/btelur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bmakan"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:hint="berat telur"
        android:inputType="number" />

    <EditText
        android:id="@+id/bmakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kirim"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:hint="berat makan"
        android:inputType="number" />

    <Button
        android:id="@+id/kirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>