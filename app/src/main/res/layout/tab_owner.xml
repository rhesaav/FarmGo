<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="id.sch.smktelkom_mlg.afinal.xirpl1052029.farmgo.SignupActivityOwner">

    <EditText
        android:id="@+id/nama_owner"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pass_owner"
        android:layout_below="@+id/judul"
        android:layout_marginTop="31dp"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/no_telp_owner"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pass_owner"
        android:layout_below="@+id/nama_owner"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:hint="No.Telp"
        android:inputType="phone"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/user_owner"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pass_owner"
        android:layout_alignBottom="@+id/pass_owner"
        android:layout_alignEnd="@+id/no_telp_owner"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/pass_owner"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/namaperusahaan"
        android:layout_below="@+id/no_telp_owner"
        android:layout_marginTop="38dp"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:hint="Passoword"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/namaperusahaan"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/proses_owner"
        android:layout_below="@+id/pass_owner"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:hint="Nama Perusahaan"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/alamat_perusahaan"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/namaperusahaan"
        android:layout_alignBottom="@+id/namaperusahaan"
        android:layout_alignEnd="@+id/proses_owner"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:hint="Alamat"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/proses_owner"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/button_transparent"
        android:text="Daftar"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lemonmilkbold"
        android:text="Lets be a Farmer"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signInButton"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/proses_owner"
        android:layout_marginBottom="45dp"
        android:background="@drawable/button_transparent">

    </com.google.android.gms.common.SignInButton>

</RelativeLayout>